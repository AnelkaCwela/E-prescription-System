@model CityModel
@{
    ViewData["Title"] = "Create City";
}
<h4 class="text-center">Create City</h4>
<hr />
@if (ViewBag.Succeeded != null)
{
    <h4 class="text-center alert alert-success alert-heading"> @ViewBag.Succeeded</h4>
}
<form asp-action="CreateCity" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                <label class="form-label" for="form3Example1">City Name</label>
                <input asp-for="CityName" placeholder="City Name" required id="form3Example1" class="form-control" />

                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" for="form3Example3">Province</label>
        <span> <select required asp-for="ProvinceId" id="DoctorSpecializationId" class="alert alert-primary small" asp-items=" ViewBag.ProvinceId"></select></span>
        <span asp-validation-for="ProvinceId" class="text-danger"></span>

    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
</form>

