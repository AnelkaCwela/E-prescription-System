@model DiagonosisModel
@{
    ViewData["Title"] = "Create Diagonosis";
}
<h4 class="text-center">Create Diagonosis</h4>
<hr />
@if (ViewBag.Data != null)
{
    <h4 class="text-center alert alert-success alert-heading"> @ViewBag.Data</h4>
}
<form asp-action="CreateDiagonosis" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row mb-4">
        <div class="col">
            <div class="form-outline">
                <label class="form-label" for="form3Example1">Diagonosis</label>
                <input asp-for="DiagonosisDescription" placeholder="Diagonosis" required id="form3Example1" class="form-control" />

                <span asp-validation-for="DiagonosisDescription" class="text-danger"></span>
            </div>
        </div>
    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
</form>