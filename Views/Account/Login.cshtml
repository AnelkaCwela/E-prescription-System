@model LoginModel

@{
    ViewData["Title"] = "Login";
}



<h4 class="text-center">Login</h4>
<hr />

<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <!-- Email input -->
    <div class="form-outline mb-4">
        <label asp-for="Email" class="form-label" for="form2Example1">Email Address</label>
        <input asp-for="Email" required placeholder="Email" id="form2Example1" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">

        <label asp-for="Password" class="form-label" for="form2Example2">Password</label>
        <input asp-for="Password" required placeholder="Password" id="form2Example2" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       id="form2Example34"
                       checked />
                <label class="form-check-label" for="form2Example34"> Remember me </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
        
    </div>

    <!-- Submit button -->
  
    <div class="text-center">
        <div class="col">
            <a asp-controller="Account" asp-action="ForgortPassword">Forgot password?</a>
        </div>
        <p>Not a member? <a asp-controller="Account" asp-action="Register">Register</a></p>
    </div>
</form>
